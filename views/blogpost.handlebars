<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{dateAt}}</p>
   <h4>
    Comments
 </h4>
  {{#each comments as |comment|}}

  <p>
    {{comment.body}}
  </p>
  <p>
    {{comment.user.username}}
  </p>
  {{/each}}

  <form class="form new-comment-form">
      <div class="form-group">
        <label for="project-desc">Comment</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/blogpost.js"></script>
