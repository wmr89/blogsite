<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <button class="btn btn-primary" type="toggle" id ="toggle">Create a New Blogpost</button>
    <div class="display-none" id="create-container">
      <form class="form new-blogpost-form">
        <div class="form-group">
          <label for="blogpost-title">Blogpost Title:</label>
          <input class="form-input" type="text" id="blogpost-title" name="blogpost-name" />
        </div>
        <div class="form-group">
          <label for="blogpost-content">Type your blogpost content here:</label>
          <textarea class="form-input" id="blogpost-content" name="blogpost-content"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogpost-list">
    <h3>Current Blogposts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4 delete">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<script src="./js/newblogpost.js"></script>