<!-- Loop over each object in the projects array -->
{{#each blogposts as |blogpost| }}
<div class="row mb-4 justify-center">
  <div class="col-md-5">
    <h2 class="text-light">
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Created by {{blogpost.user.username}} on {{format_date blogpost.createdAt}}</p>
  {{!-- </div>
  <div class="col-md-7"> --}}
    <p>
      {{blogpost.content}}
    </p>
  </div>
</div>
{{/each}}